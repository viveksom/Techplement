import java.util.*;

class Question {
    String prompt;
    String[] options;
    int correctAnswer;

    Question(String prompt, String[] options, int correctAnswer) {
        this.prompt = prompt;
        this.options = options;
        this.correctAnswer = correctAnswer;
    }
}

class Quiz {
    String name;
    List<Question> questions;

    Quiz(String name) {
        this.name = name;
        this.questions = new ArrayList<>();
    }

    void addQuestion(Question question) {
        this.questions.add(question);
    }

    void takeQuiz() {
        int score = 0;
        for (Question question : questions) {
            System.out.println(question.prompt);
            for (int i = 0; i < question.options.length; i++) {
                System.out.println((i + 1) + ". " + question.options[i]);
            }
            while (true) {
                System.out.print("Enter your answer (1-" + question.options.length + "): ");
                Scanner scanner = new Scanner(System.in);
                if (scanner.hasNextInt()) {
                    int userAnswer = scanner.nextInt();
                    if (userAnswer >= 1 && userAnswer <= question.options.length) {
                        if (userAnswer == question.correctAnswer) {
                            score++;
                            System.out.println("Correct!");
                        } else {
                            System.out.println("Incorrect. The correct answer is " + question.correctAnswer);
                        }
                        break;
                    } else {
                        System.out.println("Invalid answer. Please try again.");
                    }
                } else {
                    System.out.println("Invalid input. Please enter a number.");
                }
            }
        }
        System.out.println("Your final score is " + score + " out of " + questions.size());
    }
}

public class QuizGenerator {
    static Map<String, Quiz> quizzes;

    static {
        quizzes = new HashMap<>();
    }

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        while (true) {
            System.out.println("1. Create quiz");
            System.out.println("2. Take quiz");
            System.out.println("3. Exit");
            System.out.print("Enter your choice: ");
            if (scanner.hasNextInt()) {
                int choice = scanner.nextInt();
                switch (choice) {
                    case 1:
                        createQuiz(scanner);
                        break;
                    case 2:
                        takeQuiz(scanner);
                        break;
                    case 3:
                        System.exit(0);
                        break;
                    default:
                        System.out.println("Invalid choice. Please try again.");
                }
            } else {
                System.out.println("Invalid input. Please enter a number.");
                scanner.next(); // Consume the invalid input
            }
        }
    }

    static void createQuiz(Scanner scanner) {
        System.out.print("Enter quiz name: ");
        String quizName = scanner.next();
        if (quizzes.containsKey(quizName)) {
            System.out.println("Quiz with this name already exists. Please choose a different name.");
            return;
        }
        Quiz quiz = new Quiz(quizName);
        while (true) {
            System.out.print("Enter question prompt (or 'done' to finish): ");
            String prompt = scanner.next();
            if (prompt.equalsIgnoreCase("done")) {
                break;
            }
            System.out.print("Enter number of options: ");
            if (scanner.hasNextInt()) {
                int numOptions = scanner.nextInt();
                if (numOptions < 2) {
                    System.out.println("A question must have at least 2 options. Please try again.");
                    continue;
                }
                String[] options = new String[numOptions];
                for (int i = 0; i < numOptions; i++) {
                    System.out.print("Enter option " + (i + 1) + ": ");
                    options[i] = scanner.next();
                }
                System.out.print("Enter correct answer (1-" + numOptions + "): ");
                if (scanner.hasNextInt()) {
                    int correctAnswer = scanner.nextInt();
                    if (correctAnswer >= 1 && correctAnswer <= numOptions) {
                        Question question = new Question(prompt, options, correctAnswer);
                        quiz.addQuestion(question);
                    } else {
                        System.out.println("Invalid correct answer. Please try again.");
                    }
                } else {
                    System.out.println("Invalid input. Please enter a number.");
                }
            } else {
                System.out.println("Invalid input. Please enter a number.");
                scanner.next(); // Consume the invalid input
            }
        }
        quizzes.put(quizName, quiz);
        System.out.println("Quiz created successfully!");
    }

    static void takeQuiz(Scanner scanner) {
        System.out.print("Enter quiz name: ");
        String quizName = scanner.next();
        if (quizzes.containsKey(quizName)) {
            quizzes.get(quizName).takeQuiz();
        } else {
            System.out.println("Quiz not found"); }
    }}
